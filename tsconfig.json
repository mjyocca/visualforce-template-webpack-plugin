{
    "compilerOptions": {
        "outDir": "build",
        "moduleResolution": "node",
        "module": "commonjs",
        "allowJs": true,
        "target": "es5",
        "esModuleInterop": true,
        "declaration": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": [
            "node",
            "webpack"
        ],
        "typeRoots": [
            "node_modules/@types/",
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}